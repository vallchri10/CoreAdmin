@*<partial name="../Customer/_Customer_Update" />*@
@section scripts
    {
<script>
        $(function () {
            $.ajax({
                url: 'https://localhost:44395/api/Customer',
                method: 'GET',
            }).done(function (result) {
                processResult(result);
            });
        });

        function processResult(result) {
            var tr;
            for (var i = 0; i < result.length; i++) {
                tr = $('<tr/>');
                //tr.append("<td>" + result[i].customerID + "</td>");
                tr.append("<td><a href="+"/Customer/CustomerUpdate/"+result[i].customerID+">"+result[i].customerID+"</a></td>");
                tr.append("<td>" + result[i].firstName + " " + result[i].lastName + "</td>");
                //tr.append("<td>" + result[i].lastName + "</td>");
                tr.append("<td>" + result[i].address + "</td>");
                $('table').append(tr);
            }
        }
</script>
}